<RelativeLayout
	android:id="@+id/fragment_title_bar"
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:background="@drawable/fragment_title_border"
	android:clickable="true"
	android:paddingBottom="@dimen/title_padding_default"
	android:paddingTop="@dimen/title_padding_default">

	<TextView
		android:id="@+id/fragment_title_txt"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_centerInParent="true"
		android:gravity="center"
		android:singleLine="true"
		android:text="@string/empty_txt"
		android:textColor="@color/default_bg_color"
		android:textSize="@dimen/text_size_f4"/>

	<ImageView
		android:id="@+id/fragment_back_btn"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignBottom="@id/fragment_title_txt"
		android:layout_alignParentLeft="true"
		android:layout_alignTop="@id/fragment_title_txt"
		android:layout_centerVertical="true"
		android:layout_marginBottom="@dimen/default_margin"
		android:layout_marginLeft="@dimen/default_margin"
		android:layout_marginTop="@dimen/default_margin"
		android:paddingLeft="@dimen/interactive_padding"
		android:paddingRight="@dimen/interactive_padding"
		android:scaleType="centerInside"
		android:src="@drawable/icon_navi_back"/>

	<TextView
		android:id="@+id/fragment_back_txt"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_centerVertical="true"
		android:layout_toRightOf="@id/fragment_back_btn"
		android:layout_alignTop="@id/fragment_back_btn"
		android:layout_alignBottom="@id/fragment_back_btn"
		android:layout_toLeftOf="@id/fragment_title_txt"
		android:layout_marginRight="@dimen/large_margin"
		android:gravity="left|center_vertical"
		android:text="@string/empty_txt"
		android:textColor="@color/default_bg_color"
		android:textSize="@dimen/text_size_f1"
		android:singleLine="true"
		android:includeFontPadding="false"/>
</RelativeLayout>