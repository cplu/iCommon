<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/user_rank_size"
    android:paddingRight="@dimen/user_rank_size"
    android:paddingTop="@dimen/default_padding">

    <RelativeLayout
        android:id="@+id/view_placeholder"
        android:layout_width="@dimen/user_rank_avatar_size"
        android:layout_height="@dimen/user_rank_avatar_size"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true">

        <ImageView
            android:id="@+id/rank_level_img"
            android:layout_width="@dimen/user_rank_size"
            android:layout_height="@dimen/user_rank_size"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_achievement" />

        <TextView
            android:id="@+id/rank_level_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/rank_level_img"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/default_margin_2x"
            android:text="@string/top_user"
            android:textColor="@color/grayscale3"
            android:textSize="@dimen/text_size_f1" />
    </RelativeLayout>

    <TextView
        android:id="@+id/textview_placeholder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/view_placeholder"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/large_margin_2x"
        android:textSize="@dimen/text_size_f3" />

</RelativeLayout>