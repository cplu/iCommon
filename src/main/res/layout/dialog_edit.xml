<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginLeft="@dimen/dialog_horizontal_margin"
				android:layout_marginRight="@dimen/dialog_horizontal_margin"
				android:background="@drawable/dialog_custom"
				android:padding="@dimen/small_padding"
	>

	<TextView
		android:id="@+id/dlg_header_hint"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentTop="true"
		android:layout_margin="@dimen/default_margin"
		android:includeFontPadding="false"
		android:gravity="center"
		android:textColor="@color/dialog_title_text_color"
		android:textSize="@dimen/text_size_f5"
		android:textStyle="bold"/>

	<EditText
		android:id="@+id/dialog_edit_text"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_below="@id/dlg_header_hint"
		android:layout_marginTop="@dimen/large_margin"
		android:padding="@dimen/small_padding"
		android:background="@drawable/bg_edit_text_border"
		android:selectAllOnFocus="true"
		android:singleLine="true"
		android:hint="@string/empty_txt"/>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_below="@id/dialog_edit_text"
		android:layout_centerHorizontal="true"
		android:layout_marginTop="@dimen/large_margin"
		android:orientation="horizontal">

		<Button
			android:id="@+id/btn_positive"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginRight="@dimen/default_margin_2x"
			android:layout_weight="1"
			android:paddingBottom="@dimen/small_padding"
			android:paddingLeft="@dimen/large_padding"
			android:paddingRight="@dimen/large_padding"
			android:paddingTop="@dimen/small_padding"
			android:text="@string/button_positive"
			android:textSize="@dimen/text_size_f4"/>

		<Button
			android:id="@+id/btn_negative"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="@dimen/default_margin_2x"
			android:layout_weight="1"
			android:paddingBottom="@dimen/small_padding"
			android:paddingLeft="@dimen/large_padding"
			android:paddingRight="@dimen/large_padding"
			android:paddingTop="@dimen/small_padding"
			android:text="@string/button_negative"
			android:textSize="@dimen/text_size_f4"
			android:background="@drawable/bg_btn_dim"/>
	</LinearLayout>

</RelativeLayout>