<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
			  android:layout_width="match_parent"
			  android:layout_height="match_parent"
			  style="@style/backgroundWhite">

	<include
		android:id="@+id/change_password_title"
		layout="@layout/comp_title_with_back"/>

	<ScrollView
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_below="@id/change_password_title"
		android:layout_marginLeft="@dimen/fragment_left_margin"
		android:layout_marginRight="@dimen/fragment_left_margin"
		android:fillViewport="true">
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical">
			<TextView
				android:id="@+id/current_password_txt"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginTop="@dimen/large_margin_2x"
				android:text="@string/input_current_password"
				android:textColor="@color/default_fg_color"
				android:textSize="@dimen/text_size_f2"
				android:singleLine="true"/>
			<EditText
				android:id="@+id/current_password_edit"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="@dimen/large_margin"
				android:background="@drawable/bg_edit_text_border"
				android:inputType="textPassword"
				android:padding="@dimen/tiny_padding"
				android:textColor="@color/default_fg_color"
				android:textSize="@dimen/text_size_f2"
				android:singleLine="true"/>
			<TextView
				android:id="@+id/new_password_txt"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginTop="@dimen/large_margin_2x"
				android:text="@string/input_new_password"
				android:textColor="@color/default_fg_color"
				android:textSize="@dimen/text_size_f2"
				android:singleLine="true"/>

			<EditText
				android:id="@+id/new_password_edit"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="@dimen/large_margin"
				android:background="@drawable/bg_edit_text_border"
				android:inputType="textPassword"
				android:padding="@dimen/tiny_padding"
				android:textColor="@color/default_fg_color"
				android:textSize="@dimen/text_size_f2"
				android:singleLine="true"/>

			<TextView
				android:id="@+id/confirm_password_txt"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginTop="@dimen/large_margin_2x"
				android:text="@string/confirm_new_password"
				android:textColor="@color/default_fg_color"
				android:textSize="@dimen/text_size_f2"
				android:singleLine="true"/>

			<EditText
				android:id="@+id/confirm_password_edit"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="@dimen/large_margin"
				android:background="@drawable/bg_edit_text_border"
				android:inputType="textPassword"
				android:padding="@dimen/tiny_padding"
				android:textColor="@color/default_fg_color"
				android:textSize="@dimen/text_size_f2"
				android:singleLine="true"/>

			<Button
				android:id="@+id/confirm_password_btn"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="@dimen/large_margin_2x"
				android:paddingBottom="@dimen/text_padding"
				android:paddingTop="@dimen/text_padding"
				android:text="@string/change_password"
				android:textSize="@dimen/text_size_f2"/>
		</LinearLayout>
	</ScrollView>
</RelativeLayout>