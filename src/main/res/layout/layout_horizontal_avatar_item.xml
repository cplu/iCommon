<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/default_padding"
    >

    <com.windfindtech.icommon.view.DynamicImageView
        android:id="@+id/my_rank_avatar"
        android:layout_width="@dimen/user_rank_avatar_size"
        android:layout_height="@dimen/user_rank_avatar_size"
        android:layout_marginLeft="@dimen/user_rank_size"
        android:layout_marginRight="@dimen/user_rank_size"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        />

    <ImageView
        android:id="@+id/my_rank_level_img"
        android:layout_width="@dimen/user_rank_size_large"
        android:layout_height="@dimen/user_rank_size_large"
        android:layout_alignRight="@id/my_rank_avatar"
        android:layout_centerVertical="true"
        android:src="@drawable/icon_achievement" />

    <TextView
        android:id="@+id/my_rank_level_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/my_rank_avatar"
        android:layout_marginTop="@dimen/large_margin_2x"
        android:layout_centerHorizontal="true"
        android:text="@string/top_user"
        android:textColor="@color/default_orange"
        android:textSize="@dimen/text_size_f3" />


</RelativeLayout>