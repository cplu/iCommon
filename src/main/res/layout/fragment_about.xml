<?xml version="1.0" encoding="utf-8"?>
<LinearLayout style="@style/backgroundWhite"
			  xmlns:android="http://schemas.android.com/apk/res/android"
			  android:layout_width="match_parent"
			  android:layout_height="match_parent"
			  android:orientation="vertical">

	<include layout="@layout/comp_title_with_back"/>

	<RelativeLayout
		android:id="@+id/about_content"
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_weight="1"
		>

		<TextView
			android:id="@+id/about_logo_txt"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerInParent="true"
			android:text="@string/app_name"
			android:textColor="@color/grayscale3"
			android:textSize="@dimen/text_size_f7"
			android:textStyle="bold"
			/>

		<!--<TextView-->
		<!--android:id="@+id/about_app_name"-->
		<!--android:layout_width="wrap_content"-->
		<!--android:layout_height="wrap_content"-->
		<!--android:layout_below="@id/about_logo"-->
		<!--android:layout_centerHorizontal="true"-->
		<!--android:layout_marginTop="@dimen/dimen_margin_gap"-->
		<!--android:text="@string/app_name"-->
		<!--/>-->


	</RelativeLayout>

	<View
		android:id="@+id/border2"
		android:layout_width="match_parent"
		android:layout_height="1dp"
		android:layout_marginLeft="@dimen/fragment_left_margin"
		android:layout_marginRight="@dimen/fragment_right_margin"
		android:layout_marginTop="@dimen/dimen_margin_gap"
		android:background="@color/grayscale3"/>


	<android.support.v7.widget.RecyclerView
		android:id="@+id/list_recycled"
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_weight="2"/>

	<TextView
		android:id="@+id/windfindtech_info"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginBottom="@dimen/default_margin"
		android:layout_marginLeft="@dimen/fragment_left_margin"
		android:layout_marginRight="@dimen/fragment_right_margin"
		android:gravity="center"
		android:text="@string/company_info"
		android:textColor="@color/default_fg_color"
		android:textSize="@dimen/text_size_f1"/>

	<TextView
		android:id="@+id/windfindtech_mainpage"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="center_horizontal"
		android:layout_marginBottom="@dimen/large_margin"
		android:layout_marginLeft="@dimen/fragment_left_margin"
		android:layout_marginRight="@dimen/fragment_right_margin"
		android:gravity="center"
		android:singleLine="true"
		android:text="@string/company_mainpage"
		android:textColor="@color/default_fg_color"
		android:textSize="@dimen/text_size_f1"/>

</LinearLayout>