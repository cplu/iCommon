<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:minHeight="@dimen/list_item_option_height">
	<CheckBox
		android:id="@+id/option_item_checkbox"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentRight="true"
		android:layout_centerVertical="true"
		android:layout_margin="@dimen/large_margin"
		/>
	<TextView
		android:id="@+id/option_content"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_centerVertical="true"
		android:layout_alignParentLeft="true"
		android:layout_toLeftOf="@id/option_item_checkbox"
		android:layout_marginLeft="@dimen/large_margin"
		android:gravity="left"
		android:textColor="@color/default_fg_color"
		android:textSize="@dimen/text_size_f3"
		android:singleLine="true"
		/>
	<View
		android:layout_width="match_parent"
		android:layout_height="@dimen/list_item_option_divider_height"
		android:layout_alignParentBottom="true"
		android:background="@color/grayscale2">
	</View>
</RelativeLayout>
