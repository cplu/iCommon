<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dialog_horizontal_margin"
    android:layout_marginRight="@dimen/dialog_horizontal_margin"
    android:background="@drawable/dialog_custom"
    android:padding="@dimen/small_padding"
    >

    <TextView
        android:id="@+id/dlg_header_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_margin="@dimen/default_margin"
        android:includeFontPadding="false"
        android:gravity="center"
        android:textColor="@color/dialog_title_text_color"
        android:textSize="@dimen/text_size_f5"
        android:textStyle="bold"/>

    <LinearLayout
        android:id="@+id/layout_male"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/dlg_header_hint"
        android:layout_marginTop="@dimen/large_margin"
        android:background="@drawable/button_selector_male"
        android:gravity="center"
        android:padding="@dimen/small_padding">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_boy_simple" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/default_margin_2x"
            android:text="@string/gender_male"
            android:textColor="@color/default_white"
            android:textSize="@dimen/text_size_f3" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_female"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout_male"
        android:layout_marginTop="@dimen/large_margin"
        android:padding="@dimen/small_padding"
        android:background="@drawable/button_selector_female"
        android:gravity="center">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_girl_simple"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/default_margin_2x"
            android:text="@string/gender_female"
            android:textColor="@color/default_white"
            android:textSize="@dimen/text_size_f3"/>
    </LinearLayout>
</RelativeLayout>
